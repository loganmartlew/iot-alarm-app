generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WakeTime {
  id         String @id @default(uuid())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  time       DateTime
  days       WeekDay[]
}

model WeekDay {
  id         String @id @default(uuid())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  name       String
  systemName String @unique
  wakeTimes  WakeTime[]
}

model SleepSchedule {
  id              String @id @default(uuid())
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  sleepTime       DateTime
  wakeTime        DateTime
  optimalWakeTime DateTime
  completed       Boolean @default(false)
}